<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eCommerce.Views.PreferencesPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Preference}">
            <Label Text="Change color backgroud" 
                   TextColor="Blue"/>
            <Button
                Text="Change"
                Clicked="changeColor">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>