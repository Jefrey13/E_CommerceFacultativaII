<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eCommerce.Views.AccessApp.ConfigUserPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <Grid RowSpacing="{OnPlatform iOS=25,Android=20}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--1-->
                <RowDefinition Height="Auto" />
                <!--2-->
                <RowDefinition Height="Auto" />
                <!--3-->
                <RowDefinition Height="Auto" />
                <!--4-->
                <RowDefinition Height="Auto" />
                <!--5-->
                <RowDefinition Height="Auto" />
                <!--6-->
                <RowDefinition Height="Auto" />
                <!--7-->
                <RowDefinition Height="Auto" />
                <!--8-->
                <RowDefinition Height="Auto" />
                <!--9-->
                <RowDefinition Height="Auto" />
                <!--10-->
                <RowDefinition Height="Auto" />
                <!--11-->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Row="1" Margin="10">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="{OnPlatform iOS=90,Android=70}"
                    Source="https://factus.com.co/_astro/favicon.DMncryqX.ico"
                    WidthRequest="{OnPlatform iOS=90,Android=0}" />
            </StackLayout>

            <StackLayout Grid.Row="2" HorizontalOptions="Center">
                <Label
                    Font="Montserrat-Medium.otf"
                    FontSize="{OnPlatform Android=20,iOS=23}"
                    Text="Account Settings"
                    TextColor="Black"
                    WidthRequest="300" />
            </StackLayout>

            <StackLayout
                Grid.Row="3"
                HorizontalOptions="Center"
                Orientation="Vertical"
                WidthRequest="{OnPlatform iOS=300,Android=300}">
                <Label
                    FontSize="{OnPlatform Android=13}"
                    Text="Email"
                    TextColor="Black" />
                <Frame
                    CornerRadius="{OnPlatform Android=7}"
                    HasShadow="{OnPlatform Android=true,iOS=false}"
                    Padding="{OnPlatform Android=6,iOS=0}">
                    <Entry
                        FontSize="{OnPlatform Android=15,iOS=16}"
                        Keyboard="Email"
                        IsEnabled="False"
                        MaxLength="25"
                        x:Name="EmailTxt"
                        Placeholder="BFortuna@gmail.com"
                        Text="{Binding EmailTxt, Mode=TwoWay}" />
                </Frame>
            </StackLayout>

            <StackLayout
                Grid.Row="4"
                HorizontalOptions="Center"
                Orientation="Vertical"
                WidthRequest="300">

                <Label
                    FontSize="{OnPlatform Android=13}"
                    Text="Add Password to Change data"
                    TextColor="Black" />

                <Frame
                    CornerRadius="{OnPlatform Android=7}"
                    HasShadow="{OnPlatform Android=true,iOS=false}"
                    Padding="{OnPlatform Android=6,iOS=0}">

                    <Entry
                        FontSize="{OnPlatform Android=15,iOS=16}"
                        IsPassword="True"
                        MaxLength="25"
                        IsEnabled="False"
                        
                        Placeholder="******************"
                        Text="{Binding PasswordTxt, Mode=TwoWay}" />
                </Frame>

            </StackLayout>

            <StackLayout
                Grid.Row="5"
                HorizontalOptions="Center"
                Orientation="Vertical"
                WidthRequest="300">
                <Label
                    FontSize="{OnPlatform Android=13}"
                    Text="Fullname"
                    TextColor="Black" />

                <Frame
                    CornerRadius="{OnPlatform Android=7}"
                    HasShadow="{OnPlatform Android=true,iOS=false}"
                    Padding="{OnPlatform Android=6,iOS=0}">

                    <Entry
                        FontSize="{OnPlatform Android=15,iOS=16}"
                        IsEnabled="{Binding IsEnabledTxt}"
                        Keyboard="Text"
                        MaxLength="25"
                        x:Name="NameTxt"
                        Placeholder="Steve Jobs"
                        Text="{Binding NameTxt, Mode=TwoWay}" />
                </Frame>
            </StackLayout>
            <StackLayout
                Grid.Row="6"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="20"
                WidthRequest="300">
                <StackLayout WidthRequest="140">

                    <Label
                        FontSize="{OnPlatform Android=13}"
                        Text="Age"
                        TextColor="Black" />

                    <Frame
                        CornerRadius="{OnPlatform Android=7}"
                        HasShadow="{OnPlatform Android=true,iOS=false}"
                        Padding="{OnPlatform Android=6,iOS=0}">

                        <Entry
                            FontSize="{OnPlatform Android=15,iOS=16}"
                            IsEnabled="{Binding IsEnabledTxt}"
                            Keyboard="Numeric"
                            MaxLength="2"
                            Placeholder="18"
                            x:Name="AgeTxt"
                            Text="{Binding AgeTxt, Mode=TwoWay}" />
                    </Frame>
                </StackLayout>

            </StackLayout>

            <StackLayout Grid.Row="7" HorizontalOptions="Center">
                <ActivityIndicator
                    Color="Black"
                    IsRunning="{Binding IsRunningTxt, Mode=TwoWay}"
                    IsVisible="{Binding IsVisibleTxt, Mode=TwoWay}" />
            </StackLayout>


            <StackLayout Grid.Row="8" HorizontalOptions="Center" Orientation="Vertical">
                <Button
                    BackgroundColor="#00C569"
                    BorderColor="#f2f2f2"
                    BorderWidth="1.5"
                    CornerRadius="7"
                    Font="Montserrat-Medium.otf"
                    FontSize="{OnPlatform Android=15}"
                    HeightRequest="50"
                    IsEnabled="{Binding IsEnabledTxt, Mode=TwoWay}"
                    Text="Save Changes"
                    TextColor="White"
                    WidthRequest="300"
                    x:Name="btnSaveChanges"
                    Command="{Binding UpdateCommand}"
                    CommandParameter="{Binding .}" />
                <Button
                    BackgroundColor="#DB073D"
                    BorderColor="#f2f2f2"
                    BorderWidth="1.5"
                    CornerRadius="7"
                    Font="Montserrat-Medium.otf"
                    FontSize="{OnPlatform Android=15}"
                    Text="Delete my account"
                    TextColor="White"
                    x:Name="btnDelete"
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding .}" />
                <Label
                    Grid.Row="9"
                    Margin="0,30,0,0"
                    Font="Montserrat-Medium.otf"
                    FontSize="15"
                    HorizontalOptions="Center"
                    Text="©2024 - Factus.NIC"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>